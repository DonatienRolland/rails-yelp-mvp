<h1>My list of Restaurants</h1>

<div class="container">
  <div class="row">
    <% @restaurants.each do |restaurant| %>
      <div class="col-xs-12 col-sm-6 col-lg-4">
        <div class="card card-img-top" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= image_path "restaurant.png" %>);">
          <div class="card-category"><%= restaurant.category %></div>
          <div class="card-description">
            <h2><%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
            <p><%= restaurant.address %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
