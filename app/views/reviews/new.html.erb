<div class="container">
<%= simple_form_for [@restaurant, @review] do |f| %>
   <% if @review.errors.any? %>
  <ul>
    <% @review.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  <%= f.input :content %>
  <%= f.input :rating, collection: Review::RATING %>

  <%= f.button :submit, class: "btn btn-primary" %>

<% end %>
</div>
